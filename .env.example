# Struxient Environment Variables
# Copy this file to .env and update values for your environment

# Database (PostgreSQL)
# For local Docker: docker run --name struxient-db -e POSTGRES_PASSWORD=struxient -e POSTGRES_DB=struxient_v2 -p 5432:5432 -d postgres:16
DATABASE_URL="postgresql://user:password@localhost:5432/struxient_v2?schema=public"

# Clerk Authentication
# Get keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk URLs (defaults)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/workstation
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/workstation

# Module enablement (optional - defaults to true)
# Set to "false" to disable
# NEXT_PUBLIC_ENABLE_SALES=true
# NEXT_PUBLIC_ENABLE_FINANCE=true
